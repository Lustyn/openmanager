{
  "name": "openmanager",
  "version": "0.1.0",
  "description": "CLI manager for launching sandboxed coding agent sessions in Docker",
  "type": "module",
  "bin": {
    "openmanager": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "dev": "tsx src/cli.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "prepare": "pnpm run build",
    "test": "vitest",
    "test:opencode": "docker build -f docker/Dockerfile.opencode -t opencode-test . && docker run --rm opencode-test --help"
  },
  "keywords": [
    "cli",
    "docker",
    "git",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.18.3",
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "commander": "^12.1.0",
    "execa": "^8.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "eslint": "^9.12.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.1"
  }
}
